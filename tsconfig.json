{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,

    "outDir": "build",
    "sourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}